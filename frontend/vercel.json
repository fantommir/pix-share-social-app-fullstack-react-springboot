{
  "rewrites": [
    {
      "source": "/([^.]+)",
      "destination": "/",
      "has": [
        {
          "type": "header",
          "key": "authorization",
          "value": "Basic @VERCEL_BASIC_AUTH_TOKEN"
        }
      ]         
    },
    {
      "source": "/.*",
      "destination": "/401.html",
      "headers": { "www-authenticate": "Basic realm=\"vercel-basic-auth\"" },
      "missing": [
        {
          "type": "header",
          "key": "authorization",
          "value": "Basic @VERCEL_BASIC_AUTH_TOKEN"
        }
      ]
    }
  ]    
} 