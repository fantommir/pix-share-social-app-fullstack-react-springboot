{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    {
      "source": "/([^.]+)",
      "destination": "/",
      "statusCode": 200,
      "has": [
        {
          "type": "header",
          "key": "authorization",
          "value": "Basic $VERCEL_BASIC_AUTH_TOKEN"
        }
      ]         
    },
    {
      "source": "/(.*)",
      "destination": "/401.html",
      "statusCode": 401,
      "missing": [
        {
          "type": "header",
          "key": "authorization",
          "value": "Basic $VERCEL_BASIC_AUTH_TOKEN"
        }
      ]
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "missing": [
        {
          "type": "header",
          "key": "authorization",
          "value": "Basic $VERCEL_BASIC_AUTH_TOKEN"
        }
      ],
      "headers": [
        {
          "key": "www-authenticate",
          "value": "Basic realm=\"vercel-basic-auth\""
        }
      ]
    }
  ]    
} 